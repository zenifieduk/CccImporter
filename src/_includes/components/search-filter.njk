<div class="search-container">
  <form class="search-form">
    <div class="search-grid">
      <div class="custom-search-group">
        <label for="search-term" class="sr-only">Search Term</label>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="input-icon">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        <input type="text" id="search-term" class="custom-search-input search-term" placeholder="Search..." value="{{ searchTerm }}">
      </div>
      
      {% if categories.length > 0 %}
        <div class="custom-search-group">
          <label for="search-category" class="sr-only">Category</label>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="input-icon">
            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
          </svg>
          <select id="search-category" class="custom-search-input search-category">
            <option value="">All Categories</option>
            {% for cat in categories %}
              <option value="{{ cat }}" {% if cat === category %}selected{% endif %}>{{ cat }}</option>
            {% endfor %}
          </select>
        </div>
      {% endif %}
      
      <div class="custom-search-group">
        <label for="search-location" class="sr-only">Location</label>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="input-icon">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          <circle cx="12" cy="10" r="3"></circle>
        </svg>
        {% if locations %}
          <select id="search-location" class="custom-search-input search-location">
            <option value="">All Locations</option>
            {% for loc in locations %}
              <option value="{{ loc }}" {% if loc === location %}selected{% endif %}>{{ loc }}</option>
            {% endfor %}
          </select>
        {% else %}
          <input type="text" id="search-location" class="custom-search-input search-location" placeholder="City, region..." value="{{ location }}">
        {% endif %}
      </div>
      
      <div class="search-actions">
        <button type="submit" class="search-button">Search</button>
        <button type="button" class="reset-button">Reset</button>
      </div>
    </div>
  </form>
</div>
