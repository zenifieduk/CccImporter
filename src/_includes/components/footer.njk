<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="logo-column">
        <div class="footer-logo">
          <h3>CLASSIC CAR CLUBS</h3>
          <p class="tagline">UK Network</p>
        </div>
        <p class="footer-blurb">
          Your ultimate resource for connecting with classic car enthusiasts across the United Kingdom. Find clubs dedicated to vintage marques, iconic eras, and specific regions.
        </p>
      </div>
      
      {% for column in site.footerLinks %}
        <div class="footer-column">
          <h4>{{ column.title }}</h4>
          <ul class="footer-links">
            {% for link in column.links %}
              <li><a href="{{ link.url }}">{{ link.text }}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
      
      <div class="footer-column">
        <h4>Contact Us</h4>
        <ul class="footer-links contact-links">
          <li><a href="mailto:{{ site.email }}">{{ site.email }}</a></li>
          {% if site.phone %}
            <li><a href="tel:{{ site.phone }}">{{ site.phone }}</a></li>
          {% endif %}
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {{ "" | date("YYYY") }} Classic Car Clubs UK. All rights reserved.</p>
    </div>
  </div>
</footer>
