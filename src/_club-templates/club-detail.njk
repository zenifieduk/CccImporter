---
layout: layouts/base.njk
pagination:
  data: clubs
  size: 1
  alias: club
permalink: "/club-directory/{{ club.slug or club.id }}/"
eleventyComputed:
  title: "{{ club.name or club.title }} | Classic Car Clubs"
  description: "{{ club.description }}"
---

<div class="bg-dark-green text-white py-16">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center">
      <div class="md:w-1/3 mb-8 md:mb-0">
        <div class="w-64 h-64 rounded-full overflow-hidden border-4 border-white shadow-lg mx-auto">
          <img 
            src="{{ club.image | default('/assets/images/placeholder-club.jpg') }}" 
            alt="{{ club.name or club.title }} logo"
            class="w-full h-full object-cover" 
          >
        </div>
      </div>
      <div class="md:w-2/3 md:pl-8">
        <h1 class="text-4xl md:text-5xl font-serif mb-4">{{ club.name or club.title }}</h1>
        
        {% if club.founded %}
        <p class="text-xl mb-4">
          <span class="text-accent">Founded {{ club.founded }}</span>
          {% if club.memberCount %}
            <span class="mx-2">â€¢</span>
            <span>{{ club.memberCount | toLocaleString }} members</span>
          {% endif %}
        </p>
        {% endif %}
        
        <p class="text-xl mb-6">{{ club.description }}</p>
        
        <div class="flex flex-wrap gap-2">
          {% if club.categories and club.categories.length > 0 %}
            {% for category in club.categories %}
              <span class="inline-block bg-green-700 text-white text-sm py-1 px-3 rounded-full">
                {{ category }}
              </span>
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mx-auto px-4 py-12">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="md:col-span-2">
      <h2 class="text-3xl font-serif mb-6">About the Club</h2>
      
      {% if club.fullDescription %}
        <div class="prose prose-lg max-w-none mb-8">
          {{ club.fullDescription | markdown | safe }}
        </div>
      {% else %}
        <p class="text-lg mb-8">{{ club.description }}</p>
      {% endif %}
      
      {% if club.upcomingEvents and club.upcomingEvents.length > 0 %}
        <div class="mb-12">
          <h3 class="text-2xl font-serif mb-4">Upcoming Events</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {% for event in club.upcomingEvents | limit(4) %}
              {% set event = events | getEvent(event) %}
              {% if event %}
                {% include "components/event-card.njk" %}
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
    
    <div>
      <div class="bg-light-cream rounded-lg p-6 mb-8">
        <h3 class="text-xl font-serif mb-4">Contact Information</h3>
        
        {% if club.location %}
          <div class="mb-6">
            <h4 class="font-medium text-gray-900 mb-2">Club Address</h4>
            <address class="not-italic text-gray-600">
              {% if club.location.address %}{{ club.location.address }}<br>{% endif %}
              {% if club.location.city %}{{ club.location.city }}{% endif %}
              {% if club.location.county %}, {{ club.location.county }}{% endif %}<br>
              {% if club.location.postcode %}{{ club.location.postcode }}{% endif %}
            </address>
          </div>
        {% endif %}
        
        {% if club.contact %}
          <div class="mb-6">
            <h4 class="font-medium text-gray-900 mb-2">Get in Touch</h4>
            <ul class="space-y-2 text-gray-600">
              {% if club.contact.email %}
                <li class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-dark-green mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                  </svg>
                  <a href="mailto:{{ club.contact.email }}" class="hover:text-dark-green">{{ club.contact.email }}</a>
                </li>
              {% endif %}
              
              {% if club.contact.phone %}
                <li class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-dark-green mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                  </svg>
                  <a href="tel:{{ club.contact.phone | replace(' ', '') }}" class="hover:text-dark-green">{{ club.contact.phone }}</a>
                </li>
              {% endif %}
              
              {% if club.contact.website %}
                <li class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-dark-green mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                  </svg>
                  <a href="{{ club.contact.website }}" target="_blank" rel="noopener noreferrer" class="hover:text-dark-green">Official Website</a>
                </li>
              {% endif %}
            </ul>
          </div>
        {% endif %}
        
        {% if club.social %}
          <div>
            <h4 class="font-medium text-gray-900 mb-2">Follow on Social Media</h4>
            <div class="flex space-x-4">
              {% if club.social.facebook %}
                <a href="{{ club.social.facebook }}" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-dark-green">
                  <span class="sr-only">Facebook</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                  </svg>
                </a>
              {% endif %}
              
              {% if club.social.twitter %}
                <a href="{{ club.social.twitter }}" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-dark-green">
                  <span class="sr-only">Twitter</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                  </svg>
                </a>
              {% endif %}
              
              {% if club.social.instagram %}
                <a href="{{ club.social.instagram }}" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-dark-green">
                  <span class="sr-only">Instagram</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>
      
      <div class="bg-dark-green text-white rounded-lg p-6">
        <h3 class="text-xl font-serif mb-4">Join this Club</h3>
        <p class="mb-6">Interested in becoming a member? Contact this club directly using the information above or fill out our contact form.</p>
        <a href="/contact/?club={{ club.name or club.title | urlencode }}" class="inline-block bg-accent hover:bg-accent-dark text-dark-green py-2 px-4 rounded uppercase text-sm tracking-wider font-serif transition duration-150 w-full text-center">
          Contact About Membership
        </a>
      </div>
    </div>
  </div>
  
  <div class="mt-12">
    <h2 class="text-3xl font-serif mb-6">Similar Clubs</h2>
    
    {% set similarClubs = clubs | getSimilarClubs(club, 3) %}
    
    {% if similarClubs and similarClubs.length > 0 %}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {% for similarClub in similarClubs %}
          {% set club = similarClub %}
          {% include "components/club-card.njk" %}
        {% endfor %}
      </div>
    {% else %}
      <p class="text-gray-600">No similar clubs found.</p>
    {% endif %}
  </div>
</div>