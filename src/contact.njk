layout: layouts/page.njk
title: Contact Us
description: Get in touch with the Classic Car Clubs UK team for inquiries, submissions, and advertising opportunities.
---

{% set breadcrumbs = [{ url: '/contact/', label: 'Contact' }] %}

<section class="hero-section contact-hero-section">
  <div class="hero-overlay"></div>
  <div class="container">
    <div class="breadcrumbs-container">
      <ul class="breadcrumbs">
        <li><a href="/" style="color: white;">Home</a></li>
        <li><a href="/contact/" style="color: white;">Contact</a></li>
      </ul>
    </div>
    
    <div class="hero-content">
      <h1 class="hero-title">Contact Us</h1>
      <p class="hero-subtitle">Get in touch with the Classic Car Clubs UK team</p>
    </div>
  </div>
</section>

<div class="detail-content" style="margin: 2rem 0;">
  <div class="detail-main">
    <div class="contact-form">
      <p style="margin-bottom: 1.5rem;">
        Have a question, suggestion, or need to get in touch with our team? Fill out the form below and we'll get back to you as soon as possible.
      </p>
      
      <form id="contactForm" action="/api/send-email" method="POST">
        
        <div class="form-group">
          <label for="name" class="form-label">Your Name</label>
          <input type="text" id="name" name="name" class="form-input" required>
        </div>
        
        <div class="form-group">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" id="email" name="email" class="form-input" required>
        </div>
        
        <div class="form-group">
          <label for="contact-reason" class="form-label">Reason for contact</label>
          <select id="contact-reason" name="contact-reason" class="form-input">
            <option value="general">General enquiry</option>
            <option value="submit-club">Submit a club</option>
            <option value="advertising">Advertising</option>
            <option value="other">Something else</option>
          </select>
        </div>
        
        <div class="form-group">
          <label for="message" class="form-label">Message</label>
          <textarea id="message" name="message" class="form-input form-textarea" required></textarea>
        </div>
        
        <div class="form-group">
          <button type="submit" class="form-submit" id="submitButton">Send Message</button>
          <div id="formSpinner" style="display: none; margin-top: 1rem; text-align: center;">
            <div class="spinner" style="display: inline-block; width: 20px; height: 20px; border: 3px solid rgba(0, 0, 0, 0.1); border-radius: 50%; border-top-color: #333; animation: spin 1s ease-in-out infinite;"></div>
            <span style="margin-left: 0.5rem;">Sending...</span>
          </div>
        </div>
      </form>
      
      <div id="formSuccess" style="display: none; background-color: #d4edda; color: #155724; padding: 1rem; border-radius: 4px; margin-top: 1rem;">
        Thank you for your message! We'll get back to you as soon as possible.
      </div>
      
      <div id="formError" style="display: none; background-color: #f8d7da; color: #721c24; padding: 1rem; border-radius: 4px; margin-top: 1rem;">
        There was an error sending your message. Please try again or contact us directly at the email address below.
      </div>
      
      <style>
        @keyframes spin {
          to { transform: rotate(360deg); }
        }
      </style>
    </div>
  </div>
  
